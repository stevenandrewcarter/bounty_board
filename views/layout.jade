doctype html
html
  head
    title= title
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body(ng-app='bounty-app')
    nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#")= title
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li.dropdown
              a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Bounties
                span.caret
              ul.dropdown-menu
                li
                  a(href="#") Open
                li
                  a(href="#") Closed
          ul.nav.navbar-nav.navbar-right
            form.navbar-form.navbar-right(role="search")
              form-group
                input.form-control(type="text" placeholder="search")
                button.btn.btn-default(type="submit")
                  span.glyphicon.glyphicon-search
            li(ng-hide="authenticated")
              a(href="#/login") Login
            li(ng-hide="authenticated")
              a(href="#/register") Register
            li(ng-show="authenticated")
              a(href="#") {{current_user}}
            li(ng-show="authenticated")
              a(href="#" ng-click="signout()") Logout

    .col-md-offset-1.col-md-10
      div(ng-view)
        block content

  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
  script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js')
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-route.js')
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-resource.js')
  script(src='javascripts/bounty-app.js')